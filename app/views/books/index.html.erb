<!DOCTIPE html>

<link rel="stylesheet" href="stylesheets/books.index.scss">
<html>
  <body>
    <p id="notice"></p>
    <h1>Books</h1>
    
    <table>
      <thead>
        <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", books_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
  </tbody>
</table>
  <table>  
    <h2>New book</h2>
    <% if @book.errors.any? %>
  <%= @book.errors.count %>cases error has occurred.
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
    <%= form_for(@book, url: { controller: :books, action: :new }) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
</table>
  </body>
</html>